<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">  
<properties>  
	
	<comment>IK Analyzer 扩展配置, 主要是添加了IK词库的繁体版本</comment>
	
	<!--用户可以在这里配置自己的扩展字典-->
	<entry key="ext_dict">
		/com/platform/lucene/ext.dic; 
		/com/platform/lucene/ft_main2012.dic; 
		/com/platform/lucene/ft_quantifier.dic; 
		/com/platform/lucene/ja.dic;
	</entry>
	
	<!--用户可以在这里配置自己的扩展停止词字典-->
	<entry key="ext_stopwords">
		/com/platform/lucene/stop.dic
	</entry>
	
</properties>